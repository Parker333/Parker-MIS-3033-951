<Window x:Class="JSONChuckNorris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSONChuckNorris"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="txtChuckNorrisJoke">
        <Grid.Background>
            <ImageBrush ImageSource="https://images02.military.com/sites/default/files/styles/full/public/media/veteran-jobs/content-images/2016/03/chucknorris.jpg?itok=_J3M4O-S]"/>
        </Grid.Background>
        <ComboBox x:Name="cboCategory" HorizontalAlignment="Left" Height="99" Margin="58,107,0,0" VerticalAlignment="Top" Width="161" SelectionChanged="cboCategory_SelectionChanged"/>
        <Label x:Name="lblCategory" Content="Please pick a category" HorizontalAlignment="Left" Height="34" Margin="60,54,0,0" VerticalAlignment="Top" Width="159" Background="#FFF3E5E5"/>
        <TextBlock HorizontalAlignment="Left" Height="91" Margin="557,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="207" Foreground="#FF020202" Background="#FFF9F9F9"/>
        <Button x:Name="btnJoke" Content="Joke" HorizontalAlignment="Center" Height="34" Margin="0,331,0,0" VerticalAlignment="Top" Width="118" Click="btnJoke_Click"/>

    </Grid>
</Window>

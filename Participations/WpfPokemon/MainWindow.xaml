<Window x:Class="WpfPokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPokemon"
        mc:Ignorable="d"
        Title="Pokemon" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstPokemon" HorizontalAlignment="Left" Height="337" Margin="62,31,0,0" VerticalAlignment="Top" Width="298" SelectionChanged="lstPokemon_SelectionChanged"/>
        <Image x:Name="imgSprite" HorizontalAlignment="Left" Height="190" Margin="449,39,0,0" VerticalAlignment="Top" Width="296"/>
        <Button x:Name="btnPokemon" Content="Pokemon" HorizontalAlignment="Left" Height="55" Margin="500,278,0,0" VerticalAlignment="Top" Width="127" Click="btnPokemon_Click"/>

    </Grid>
</Window>
 